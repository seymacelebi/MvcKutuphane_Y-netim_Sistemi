@using MvcKutuphane.Models.Entity
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<table class="table table-striped">
    <tr style="background-color:#b200ff">
    <tr>
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>

    </tr>
    @foreach (var y in Model)
    {
<tr>
    <td>@y.ID</td>
    <td>@y.AD</td>
    <td>@y.SOYAD</td>
    <td>@Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new { @class = "btn btn-danger", onclick = "return confirm ('Silmek istiyor musunuz?')" })</td>
    <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">GÜNCELLE</a></td>
    <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:lightseagreen">Yazarın Kitapları</a></td>
</tr>
    }
</table>
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
